{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "text": "GET /pets: List all pets",
      "wrap": true
    },
    {
      "type": "Table",
      "columns": [
        {
          "width": 1
        }
      ],
      "rows": [
        {
          "type": "TableRow",
          "cells": [
            {
              "type": "TableCell",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "id: ${id}",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "name: ${name}",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "tag: ${tag}",
                  "wrap": true
                }
              ]
            }
          ],
          "$data": "${$root}"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}